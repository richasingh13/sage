<div class="mainContent clearfix">
  <div class="container">
    <div class="upcoming_events event-col">
      <div class="row clearfix">
        <% @events.each do |event| %>
          <div class="col-xs-6 col-sm-4">
            <div class="related_post_sec single_post">
              <span class="date-wrapper">
                <span class="date"><span><%= event.start_datetime.strftime("%d")%></span><%= event.start_datetime.strftime("%b")%></span>
              </span>
              <div class="rel_right">
                <%= link_to event_path(event) do %>
                <h4><%= event.title %></h4>
                <div class="meta">
                  <span class="place"><i class="fa fa-map-marker"></i><%= event.venue%></span>
                  <span class="event-time"><i class="fa fa-clock-o"></i><%= event.start_datetime.strftime("%H.%M %p")%></span>
                </div>
                <%= event.description.html_safe %>
                <button class="btn btn-default commonBtn">view Detals</button>
                <% end%>
              </div>
            </div>
          </div>
        <% end %>
      </div><!-- row clearfix -->
    </div>
  </div><!-- container -->
</div>